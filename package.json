{
  "name": "bcx-validation",
  "version": "1.0.0",
  "description": "Buttonwood validator",
  "keywords": [
    "validation"
  ],
  "homepage": "http://github.com/buttonwoodcx/bcx-validation",
  "bugs": {
    "url": "https://github.com/buttonwoodcx/bcx-validation/issues"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/buttonwoodcx/bcx-validation"
  },
  "license": "MIT",
  "author": "Chunpeng Huo",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.6.1",
    "rollup": "^0.66.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-terser": "^3.0.0",
    "standard-changelog": "^2.0.1",
    "tape": "^4.9.1"
  },
  "scripts": {
    "build": "env BABEL_ENV=development rollup -c",
    "lint": "eslint src",
    "prepare": "npm run build",
    "preversion": "npm test",
    "version": "standard-changelog && git add CHANGELOG.md",
    "postversion": "git push && git push --tags && npm publish",
    "pretest": "npm run lint",
    "test": "env BABEL_ENV=test tape -r @babel/register 'test/**/*.spec.js'"
  },
  "main": "dist/index.js",
  "types": "index.d.ts",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "dependencies": {
    "bcx-expression-evaluator": "^1.0.0",
    "lodash": "^4.0.0"
  },
  "aurelia": {
    "import": {
      "dependencies": [
        "bcx-expression-evaluator",
        "bcx-validation",
        "lodash"
      ],
      "tutorial": [
        "Inject to your Aurelia component",
        "import Validation from 'bcx-validation';",
        "@inject(Validation)",
        "export class YourComponent {...}"
      ]
    }
  }
}
